package animaisPolimorfismo;

public abstract class Animal {
	
	protected String nome;
	protected int idade;
	protected String som;
	
	protected Animal() {
		nome = "sem nome";
		idade = 0;
		som = "n√£o faz som";
	}
	
	protected Animal(String nome,int idade) {
		this.nome = nome;
		this.idade = idade;
	}
	
	protected void fazerSom() {
		this.som = "Som do animal";
		System.out.println(this.som);
	}

	public String getNome() {
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

	public int getIdade() {
		return idade;
	}

	public void setIdade(int idade) {
		this.idade = idade;
	}

	public String getSom() {
		return som;
	}

	public void setSom(String som) {
		this.som = som;
	}
	
	

}
